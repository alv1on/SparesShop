@model OrderDone
<meta charset="UTF-8">


@{
    string strTitle = "Checkout";
    ViewBag.Title = strTitle;
}
<div class="row">
    <h1 style="color: red">@ViewBag.Message</h1>
</div>


@using (Html.BeginForm("Complete", "Orders", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Checkout</h4>
        <form>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Alvion">
                    <span asp-validation-for="ClientName"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="surname">Surname</label>
                    <input type="text" class="form-control" name="surname" placeholder="Alvionise">
                    <span asp-validation-for="ClientSurname"></span>
                </div>
            </div>


            <div class="mb-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" placeholder="ktrnzhk@icloud.com">
                <span asp-validation-for="ClientEmail"></span>
            </div>

            <div class="mb-3">
                <label for="address">Address</label>
                <input type="text" class="form-control" name="address" placeholder="Jakuba Kolosa 83">
                <span asp-validation-for="ClientAddress"></span>
            </div>

            <div class="mb-3">
                <label for="phone">Phone</label>
                <input type="tel" class="form-control" name="phone" placeholder="80336878121">
                <span asp-validation-for="ClientPhone"></span>
            </div>
            <hr class="mb-4">

            @foreach (var item in ViewBag.OrderList)
            {
                <input name="orderList" type="hidden" value="@item" />
            }
            <input type="submit" class="btn btn-outline-info" name="" value="Send" data-toggle="modal" data-target="#exampleModal">
        </form>
    </div>
}
