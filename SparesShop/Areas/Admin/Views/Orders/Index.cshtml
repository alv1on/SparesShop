@model IEnumerable<OrderDone>
@{
    string strTitle = "Orders";
    ViewBag.Title = strTitle;
}
<meta charset="UTF-8">
<div>
    <h2>@strTitle</h2>
    <div>
        <div class="div-box">
            <a class="nav-link" href="/Admin/Orders/Details">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                Details
            </a>

        </div>
        @if (Model.Any())
        {
            <div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Id order</th>
                            <th scope="col">Cliet Name</th>
                            <th scope="col">Client Surname</th>
                            <th scope="col">Client Address</th>
                            <th scope="col">Client Phone</th>
                            <th scope="col">Client Email</th>
                            <th scope="col">Время заказа</th>
                            <th scope="col"></th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    @foreach (OrderDone order in Model)
                    {

                        <tr>
                            <td>@order.Id</td>
                            <td>@order.ClientName</td>
                            <td>@order.ClientSurname</td>
                            <td>@order.ClientAddress</td>
                            <td>@order.ClientPhone</td>
                            <td>@order.ClientEmail</td>
                            <td>@order.OrderTime</td>
                            <td>@order.orderDetails</td>
                            <td>
                                <form style="display: inline-block;" id="form-@order.Id" asp-area="Admin" asp-controller="Orders" asp-action="Delete" method="post">
                                    <input type="hidden" name="OrderDoneId" value="@order.Id">
                                    <a href="#" onclick="document.getElementById('form-@order.Id').submit();">
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </a>
                                </form>
                            </td>
                        </tr>



                    }
                </table>
            </div>
        }
    </div>

    <div class="box-button" id="login">
        <a href="/admin">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z" />
            </svg>
        </a>
    </div>
</div>
